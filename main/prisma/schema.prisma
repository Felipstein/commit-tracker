generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Commit {
  id              String   @id @default(cuid())
  hash            String   @unique
  message         String
  authorName      String
  authorEmail     String
  committedAt     DateTime @default(now())
  redirectUrl     String
  commitsSubmitId String?

  submitInfo CommitsSubmit? @relation(fields: [commitsSubmitId], references: [id], onDelete: SetNull)

  @@map("commits")
}

model CommitsSubmit {
  id          String   @id @default(cuid())
  description String?
  submittedAt DateTime @default(now())

  Commit Commit[]

  @@map("commits_submits")
}
