generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Commit {
  id          String   @id @default(cuid())
  hash        String   @unique
  message     String
  authorName  String
  authorEmail String
  committedAt DateTime @default(now())
  redirectUrl String

  submitInfo CommitsSubmit?

  @@map("commits")
}

model CommitsSubmit {
  id          String   @id @default(cuid())
  description String?
  commitId    String   @unique
  imageUrls   String[]
  submittedAt DateTime @default(now())

  commit Commit @relation(fields: [commitId], references: [id], onDelete: Cascade)

  @@map("commits_submits")
}
